{% macro menu(slug) %}
  {% set menuEntry = craft.entries.section('menu').one() %}
  {% set menu = craft.entries.section('menu').descendantOf(menuEntry.id).all() %}
  <ul class="list-reset lg:flex items-center text-base tracking-wide">
    {% for item in menu %}
      <li class="uppercase px-3 whitespace-no-wrap">
        {% if not item.callToAction.isEmpty() %}
          <a class="hover:underline" {{ item.callToAction.getLinkAttributes() }}>
            {{ item.callToAction.getText() }}
          </a>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endmacro %}
